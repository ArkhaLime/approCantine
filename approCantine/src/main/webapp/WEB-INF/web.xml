<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

	<display-name>ApproCantine</display-name>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>fr.fiegel.web.servlet.LoginServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>fr.fiegel.web.servlet.LogoutServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>ListeProduitsServlet</servlet-name>
		<servlet-class>fr.fiegel.web.servlet.ListeProduitsServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>ListeProduitsPerimesServlet</servlet-name>
		<servlet-class>fr.fiegel.web.servlet.ListeProduitsPerimesServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>ListeProduitsRuptureServlet</servlet-name>
		<servlet-class>fr.fiegel.web.servlet.ListeProduitsRuptureServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>DetailProduitServlet</servlet-name>
		<servlet-class>fr.fiegel.web.servlet.DetailProduitServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>UpdateProduitServlet</servlet-name>
		<servlet-class>fr.fiegel.web.servlet.UpdateProduitServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>DeleteProduitServlet</servlet-name>
		<servlet-class>fr.fiegel.web.servlet.DeleteProduitServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>RechercheProduitServlet</servlet-name>
		<servlet-class>fr.fiegel.web.servlet.RechercheProduitServlet</servlet-class>
	</servlet>
	
	
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ListeProduitsServlet</servlet-name>
		<url-pattern>/listeProduits</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ListeProduitsPerimesServlet</servlet-name>
		<url-pattern>/listePerimes</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ListeProduitsRuptureServlet</servlet-name>
		<url-pattern>/listeRuptures</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>DetailProduitServlet</servlet-name>
		<url-pattern>/detail</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>UpdateProduitServlet</servlet-name>
		<url-pattern>/update</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>DeleteProduitServlet</servlet-name>
		<url-pattern>/delete</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>RechercheProduitServlet</servlet-name>
		<url-pattern>/recherche</url-pattern>
	</servlet-mapping>

</web-app>